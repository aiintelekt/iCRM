<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>crm Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <!-- Creating Account -->
    <service name="crmsfa.createAccount" engine="java" location="org.fio.crm.account.AccountServices" invoke="createAccount">
        <description>Creates an Account, which is a combination of Party, PartyGroup, Person, and PartySupplementalData.
        Accounts can be created by anyone with CRMSFA_ACCOUNT_CREATE permission.</description>
        <implements service="crmsfa.accountInterface"/>
        <implements service="crmsfa.createBasicContactInfoForParty"/>
        <attribute name="initialTeamPartyId" type="String" mode="IN" optional="true"/>
        
        <attribute name="dataSourceId" type="String" mode="IN" optional="true"/>
        <attribute name="marketingCampaignId" type="String" mode="IN" optional="true"/>
        <attribute name="forceComplete" type="String" mode="IN" optional="true"/>
        <attribute name="partyClassificationGroupId" type="String" mode="IN" optional="true"/>
        <attribute name="contactPartyId" type="String" mode="IN" optional="true"/>
        <attribute name="duplicateAccountsWithName" type="Set" mode="OUT" optional="true"/>
        <attribute name="isExempt" type="String" mode="IN" optional="true"/>
        <attribute name="partyTaxId" type="String" mode="IN" optional="true"/>
        <attribute name="accountOrLead" type="String" mode="IN" optional="true"/>
        <attribute name="timeZoneDesc" type="String" mode="IN" optional="true"/>
        <attribute name="statusId" type="String" mode="IN" optional="true"/>
       	<attribute name="personResponsible" type="String" mode="IN" optional="true"/>
       	<attribute name="securityMtxEntity" type="String" mode="IN" optional="true"/>
       	
       	<attribute name="firstName" type="String" mode="IN" optional="true"/>
       	<attribute name="lastName" type="String" mode="IN" optional="true"/>
        
        <attribute name="partyId" type="String" mode="OUT" optional="false"/>
        
    </service>
    <service name="crmsfa.updateAccount" engine="java" location="org.fio.crm.account.AccountServices" invoke="updateAccount">
		<description>updates an Account, which is a combination of Party, PartyGroup, Person, and PartySupplementalData. 
            The userLogin will need CRMSFA_ACCOUNT_UPDATE permission on this account.</description>
		<implements service="crmsfa.accountInterface"/>
		<attribute name="partyId" type="String" mode="IN" optional="false"/>
		<attribute name="dataSourceId" type="String" mode="IN" optional="true"/>
		<attribute name="partyClassificationGroupId" type="String" mode="IN" optional="true"/>
		<attribute name="isExempt" type="String" mode="IN" optional="true"/>
		<attribute name="partyTaxId" type="String" mode="IN" optional="true"/>
		<attribute name="initialTeamPartyId" type="String" mode="IN" optional="true"/>
		<attribute name="timeZoneDesc" type="String" mode="IN" optional="true"/>
		<attribute name="personResponsible" type="String" mode="IN" optional="true"/>	
		<attribute name="securityMtxEntity" type="String" mode="IN" optional="true"/>
	</service>
    
    <service name="crmsfa.accountInterface" engine="interface" location="" invoke="">
        <!-- Party and PartyGroup fields -->
        <attribute name="accountName" type="String" mode="IN" optional="false"/>
        <attribute name="groupNameLocal" type="String" mode="IN" optional="true"/>
        <attribute name="officeSiteName" type="String" mode="IN" optional="true"/>
        <attribute name="description" type="String" mode="IN" optional="true"/>
        <!-- PartySupplementalData fields -->
        <attribute name="parentPartyId" type="String" mode="IN" optional="true"/>
        <attribute name="annualRevenue" type="java.math.BigDecimal" mode="IN" optional="true"/>
        <attribute name="currencyUomId" type="String" mode="IN" optional="true"/>
        <attribute name="numberEmployees" type="Long" mode="IN" optional="true"/>
        <attribute name="industryEnumId" type="String" mode="IN" optional="true"/>
        <attribute name="ownershipEnumId" type="String" mode="IN" optional="true"/>
        <attribute name="sicCode" type="String" mode="IN" optional="true"/>
        <attribute name="tickerSymbol" type="String" mode="IN" optional="true"/>
        <attribute name="importantNote" type="String" mode="IN" allow-html="any" optional="true"/>
         <attribute name="personResponsible" type="String" mode="IN" optional="true"/>
         <attribute name="gstnNo" type="String" mode="IN" optional="true"/>
         <attribute name="basePrimaryEmail" type="String" mode="IN" optional="true"/>
         <attribute name="basePrimaryPhoneNumber" type="String" mode="IN" optional="true"/>
    </service>
    <service name="crmsfa.addAccountDataSource" engine="java" location="org.fio.crm.common.DataSourceServices" invoke="addAccountDataSource">
        <description>Adds a DataSource to the Account. The userLogin is required to have CRMSFA_ACCOUNT_UPDATE permission on this account.</description>
        <attribute name="partyId" type="String" mode="IN" optional="false"/>
        <attribute name="dataSourceId" type="String" mode="IN" optional="false"/>
        <attribute name="fromDate" type="Timestamp" mode="IN" optional="true"/>
    </service>
    <service name="crmsfa.removeAccountDataSource" engine="java" location="org.fio.crm.common.DataSourceServices" invoke="removeAccountDataSource">
        <description>Adds a DataSource to the Account. The userLogin is required to have CRMSFA_ACCOUNT_UPDATE permission on this account.</description>
        <attribute name="partyId" type="String" mode="IN" optional="false"/>
        <attribute name="dataSourceId" type="String" mode="IN" optional="false"/>
        <attribute name="fromDate" type="Timestamp" mode="IN" optional="true"/>
    </service>
    <service name="crmsfa.assignTeamToAccount" engine="java" location="org.fio.crm.teams.TeamServices" invoke="assignTeamToAccount">
        <description>Assigns a team to an account. The userLogin must have CRMSFA_TEAM_ASSIGN permission on this account.</description>
        <attribute name="accountPartyId" type="String" mode="IN" optional="false"/>
        <attribute name="teamPartyId" type="String" mode="IN" optional="false"/>
    </service>
    <service name="createPartyTaxExcemption" engine="java" default-entity-name="PartyTaxAuthInfo" location="org.fio.crm.config.TaxExcemption" invoke="createPartyTaxExcemption">
        <auto-attributes mode="IN" include="pk" optional="true"/>
        <auto-attributes mode="IN" include="nonpk" optional="true"/>
    </service>
    <service name="updatePartyTaxExcemption" engine="java" default-entity-name="PartyTaxAuthInfo" location="org.fio.crm.config.TaxExcemption" invoke="updatePartyTaxExcemption">
		<auto-attributes mode="IN" include="pk" optional="true"/>
		<auto-attributes mode="IN" include="nonpk" optional="true"/>
	</service>
	<service name="crmsfa.deactivateAccount" engine="java" location="org.fio.crm.account.AccountServices" invoke="deactivateAccount">
		<description>Deactivates an account by expiring all party relationships with the account and setting the account party statusId to PARTY_DISABLED. 
            Checks if userLogin has permission CRMSFA_ACCOUNT_DEACTIVATE on the account.</description>
		<attribute name="partyId" type="String" mode="IN" optional="false"/>
		<attribute name="expireDate" type="Timestamp" mode="IN" optional="true"/>
	</service>
	<service name="crmsfa.reassignAccountResponsibleParty" engine="java" location="org.fio.crm.account.AccountServices" invoke="reassignAccountResponsibleParty" auth="true">
		<description>Reassigns the person RESPONSIBLE_FOR an account</description>
		<attribute name="accountPartyId" type="String" mode="IN" optional="false"/>
		<attribute name="newPartyId" type="String" mode="IN" optional="false"/>
	</service>
</services>