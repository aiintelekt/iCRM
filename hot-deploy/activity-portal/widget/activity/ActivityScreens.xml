	<screen name="UpdateTask">
		<section>
			<actions>
			  <set field="titleProperty" value="UpdateTask" global="true"/>
			  <set field="sectionName" value="activity-portal" global="true"/>
			  <script location="component://activity-portal/webapp/activity-portal/WEB-INF/actions/activity/ViewActivity.groovy"/>
			</actions>
			<widgets>
			<section>
			<condition>
				<if-compare field="haveDataPermission" operator="equals" value="Y" type="String"/>
			</condition>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="top-content">
						<platform-specific>
							<html>
								<html-template location="component://activity-portal/webapp/activity-portal/activity/update/update_task.ftl"/>
							</html>
						</platform-specific>
					</decorator-section>
					<!-- <decorator-section name="bottom-content">
						<include-screen name="UpdateSubscriptionAdditional"/>
	              	</decorator-section> -->
				</decorator-screen>
				</widgets>
	        	<fail-widgets>
					<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
						<decorator-section name="top-content">
							<label style="h3">${uiLabelMap.permissionDenied}</label>
						</decorator-section>
					</decorator-screen>
				</fail-widgets>
	        </section>
			</widgets>
		</section>
	</screen>
	
