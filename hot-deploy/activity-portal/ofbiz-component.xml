<?xml version="1.0" encoding="UTF-8"?>
<ofbiz-component name="activity-portal"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/ofbiz-component.xsd">
    <!-- define resource loaders; most common is to use the component resource loader -->
    <resource-loader name="main" type="component"/>

    <!-- place the config directory on the classpath to access configuration files -->
    <classpath type="dir" location="config"/>
    <classpath type="dir" location="dtd"/>

    <!-- load single or multiple external libraries -->
    <classpath type="jar" location="build/lib/*"/>
    <classpath type="jar" location="lib/*"/>

    <!-- entity resources: model(s), eca(s), group, and data definitions -->
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel-extend.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel-view.xml"/>
    
    <entity-resource type="data" reader-name="seed" loader="main" location="data/activity-portalSeedData.xml"/>
    <entity-resource type="data" reader-name="system_seed" loader="main" location="data/activity-portalDynaScreenConfigSystemSeed.xml"/>
    <entity-resource type="data" reader-name="system_seed" loader="main" location="data/activity-portalEnumerationAndPretailSystemSeed.xml"/>
    <entity-resource type="data" reader-name="system_seed" loader="main" location="data/activity-portalCommonSystemSeed.xml"/>
    <entity-resource type="data" reader-name="system_seed" loader="main" location="data/activity-portalAppBarAndGridSystemSeed.xml"/>
    <entity-resource type="data" reader-name="custom_seed" loader="main" location="data/activity-portalPhoneCampaignSeedData.xml"/>
    
    <entity-resource type="data" reader-name="system_seed" loader="main" location="data/activity-portalSecurityPermissionSystemSeed.xml"/>
    
    <!-- service resources: model(s), eca(s) and group definitions -->
    <service-resource type="model" loader="main" location="servicedef/services.xml"/>
    <service-resource type="model" loader="main" location="servicedef/services_program.xml"/>
	    
    <!--
    <service-resource type="eca" loader="main" location="servicedef/secas.xml"/>
    <service-resource type="group" loader="main" location="servicedef/groups.xml"/>
    -->

    <test-suite loader="main" location="testdef/activity-portalTests.xml"/>

    <!-- web applications; will be mounted when using the embedded container -->
    <webapp name="activity-portal"
        title="activity-portal"
        server="default-server"
        location="webapp/activity-portal"
        mount-point="/activity-portal"/>
   	<webapp name="activity-portal-resource"
        title="activity-portal Resources including css, images, js"
        server="default-server"
        location="webapp/activity-portal-resource"
        mount-point="/activity-portal-resource"
        app-bar-display="false"/>   
          
</ofbiz-component>
