	<screen name="UpdateLead">
		<section>
			<actions>
			  <set field="titleProperty" value="UpdateLead" global="true"/>
			  <set field="sectionName" value="lead-portal" global="true"/>
			  <script location="component://lead-portal/webapp/lead-portal/WEB-INF/actions/lead/ViewLead.groovy"/>
			  <script location="component://common-portal/webapp/common-portal/WEB-INF/actions/common/AddDataSource.groovy"/>
			</actions>
			<widgets>
			<section>
			<condition>
				<if-compare field="haveDataPermission" operator="equals" value="Y" type="String"/>
			</condition>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="top-content">
						<platform-specific>
							<html>
								<html-template location="component://lead-portal/webapp/lead-portal/lead/update/update_lead.ftl"/>
							</html>
						</platform-specific>
					</decorator-section>
					<!-- <decorator-section name="bottom-content">
						<include-screen name="UpdateLeadAdditional"/>
	              	</decorator-section> -->
				</decorator-screen>
				</widgets>
	        	<fail-widgets>
					<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
						<decorator-section name="top-content">
							<label style="h3">${uiLabelMap.permissionDenied}</label>
						</decorator-section>
					</decorator-screen>
				</fail-widgets>
	        </section>
			</widgets>
		</section>
	</screen>
