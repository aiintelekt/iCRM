<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>crm-portal Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="noSyntaxError" engine="interface">
        <description>
            Dummy service to prevent empty files and syntax error - Remove when the 1st real service will be added here 
        </description>
    </service> 
    
    <service name="crmPortal.createCustomer" engine="java" use-transaction="true" auth="true" transaction-timeout="36000"
             location="org.groupfio.crm.service.service.impl.CustomerServiceImpl" invoke="createCustomer">
       	<description> Create Customer Service </description>
       	
       	<attribute name="roleTypeId" type="String" mode="IN" optional="true"/>
       	<attribute name="vplusNumber" type="String" mode="IN" optional="true"/>
       	
       	<attribute name="isNonCrm" type="String" mode="IN" optional="true"/>
       	
       	<attribute name="firstName" type="String" mode="IN" optional="true"/>
       	<attribute name="lastName" type="String" mode="IN" optional="true"/>
       	<attribute name="firstNameLocal" type="String" mode="IN" optional="true"/>
       	<attribute name="lastNameLocal" type="String" mode="IN" optional="true"/>
       	<attribute name="personalTitle" type="String" mode="IN" optional="true"/>
       	<attribute name="description" type="String" mode="IN" optional="true"/>
       	<attribute name="nationalId" type="String" mode="IN" optional="true"/>
		       		
       	<attribute name="partyId" type="String" mode="OUT" optional="false"/>
		       	
    </service>
    
    <service name="crmPortal.getCINFromParty" engine="java" use-transaction="true" auth="true" transaction-timeout="36000"
			 location="org.groupfio.crm.service.service.impl.CommonServicesImpl" invoke="getCINFromParty">
		<description>Get Party ID from CIN</description>
		<attribute name="partyId" type="String" mode="IN" optional="true"/>
		<attribute name="CIN" type="String" mode="OUT" optional="true"/>
	</service>
	
	<service name="crm.setCustRequestStatus" engine="simple"
            location="component://crm-service/script/org/groupfio/crm/service/ServiceRequestServices.xml" invoke="crm.setCustRequestStatus" auth="true">
        <description>Set the Customer Request  Status</description>
        <attribute name="custRequestId" type="String" mode="INOUT" optional="false"/>
        <attribute name="statusId" type="String" mode="IN" optional="false"/>
        <attribute name="reason" type="String" mode="IN" optional="true" allow-html="any"/>
        <attribute name="oldStatusId" type="String" mode="OUT" optional="true"/>
        <attribute name="fromPartyId" type="String" mode="INOUT" optional="true"/><!-- for notification services -->
        <attribute name="custRequestName" type="String" mode="OUT" optional="true"/><!-- for notification services -->
        <attribute name="webSiteId" type="String" mode="IN" optional="true"/><!-- for notification services -->
    </service>
    
    <service name="crm.createCustRequestSupplementory" engine="simple" location="component://crm-service/script/org/groupfio/crm/service/ServiceRequestServices.xml" invoke="createCustRequestSupplementory" auth="true">
        <description>
            Create Attributes for create service request service. 
        </description>
        <attribute name="custRequestId" type="String" mode="IN" optional="false"/>
        <auto-attributes mode="IN" entity-name="CustRequestSupplementory" include="nonpk" optional="true"/>
    </service>
    <service name="crm.updateCustRequestSupplementory" engine="simple" location="component://crm-service/script/org/groupfio/crm/service/ServiceRequestServices.xml" invoke="updateCustRequestSupplementory" auth="true">
        <description>
            Create Attributes for create service request service. 
        </description>
        <attribute name="custRequestId" type="String" mode="IN" optional="false"/>
        <auto-attributes mode="IN" entity-name="CustRequestSupplementory" include="nonpk" optional="true"/>
    </service>
    
    <service name="crm.createCustRequestChannelPweb" engine="simple" location="component://crm-service/script/org/groupfio/crm/service/ServiceRequestServices.xml" invoke="createCustRequestChannelPweb" auth="true">
        <description>
            Create Attributes for create service request service. 
        </description>
        <attribute name="custRequestId" type="String" mode="IN" optional="false"/>
        <auto-attributes mode="IN" entity-name="CustRequestChannelPweb" include="nonpk" optional="true"/>
    </service>
    
    <service name="crm.updateCustRequestChannelPweb" engine="simple" location="component://crm-service/script/org/groupfio/crm/service/ServiceRequestServices.xml" invoke="updateCustRequestChannelPweb" auth="true">
        <description>
            Create Attributes for create service request service. 
        </description>
        <attribute name="custRequestId" type="String" mode="IN" optional="false"/>
        <attribute name="custReqSegment" type="String" mode="IN" optional="false"/>
    </service>
    
    <service name="crm.syncSrStatusEsc" engine="java" location="org.groupfio.crm.service.service.SyncServices" invoke="syncSrStatusEsc">
       	<attribute name="requestContext" mode="IN" type="Map" optional="true" />
       	<attribute name="errorMsg" type="String" mode="OUT" optional="true"/>
    </service>
	    
</services>