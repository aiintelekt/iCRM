	<screen name="UpdateAccount">
		<section>
			<actions>
			  <set field="titleProperty" value="UpdateAccount" global="true"/>
			  <set field="sectionName" value="account-portal" global="true"/>
			  <script location="component://account-portal/webapp/account-portal/WEB-INF/actions/account/ViewAccount.groovy"/>
			</actions>
			<widgets>
			<section>
			<condition>
				<if-compare field="haveDataPermission" operator="equals" value="Y" type="String"/>
			</condition>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="top-content">
						<platform-specific>
							<html>
								<html-template location="component://account-portal/webapp/account-portal/account/update/update_account.ftl"/>
							</html>
						</platform-specific>
					</decorator-section>
					<!-- <decorator-section name="bottom-content">
						<include-screen name="UpdateAccountAdditional"/>
	              	</decorator-section> -->
				</decorator-screen>
				</widgets>
	        	<fail-widgets>
					<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
						<decorator-section name="top-content">
							<label style="h3">${uiLabelMap.permissionDenied}</label>
						</decorator-section>
					</decorator-screen>
				</fail-widgets>
	        </section>
			</widgets>
		</section>
	</screen>
	
