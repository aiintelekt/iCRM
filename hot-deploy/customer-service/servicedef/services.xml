<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>customer-service Services</description>
    <vendor></vendor>
    <version>1.0</version>
    <!-- Version 2 API services start -->
    <service name="cs.createCustomerApiV2" engine="java" location="org.fio.customer.service.service.v2.CustomerServices" invoke="createCustomer" >
    	<description> Create Customer API</description>
    	<attribute name="requestContext" type="Map" mode="IN" optional="false"/>
    	<attribute name="result" mode="OUT" type="List" optional="true"/>
    </service>
    
    <service name="cs.updateCustomerApiV2" engine="java" location="org.fio.customer.service.service.v2.CustomerServices" invoke="updateCustomer" >
    	<description> Update Customer API</description>
    	<attribute name="requestContext" type="Map" mode="IN" optional="false"/>
    	<attribute name="result" mode="OUT" type="List" optional="true"/>
    	
    </service>
    
    <service name="cs.findCustomerApiV2" engine="java" location="org.fio.customer.service.service.v2.CustomerServices" invoke="findCustomer" >
    	<description> Find Customer API</description>
    	<attribute name="requestContext" type="Map" mode="IN" optional="false"/>
    	<attribute name="result" type="List" mode="OUT" optional="true"/>
    	
    	<attribute name="totalPage" type="Integer" mode="OUT" optional="true"/>
    	<attribute name="totalRecord" type="Integer" mode="OUT" optional="true"/>
    	<attribute name="currPage" type="Integer" mode="OUT" optional="true"/>
    </service>
    
    <service name="cs.getCustomerDetailsApiV2" engine="java" location="org.fio.customer.service.service.v2.CustomerServices" invoke="getCustomerDetails" >
    	<description> Update Customer API</description>
    	<attribute name="customerId" type="String" mode="IN" optional="false"/>
    	<attribute name="result" mode="OUT" type="Map" optional="true"/>
    	
    </service>
    
    <service name="cs.verifyCustomerV2" engine="java" location="org.fio.customer.service.service.v2.CustomerServices" invoke="verifyCustomer" >
    	<description> Update Customer API</description>
    	<attribute name="emailId" type="String" mode="IN" optional="false"/>
    	<attribute name="mode" type="String" mode="IN" optional="false"/>
    	<attribute name="hashCode" type="String" mode="IN" optional="true"/>
    	<attribute name="partyId" mode="IN" type="String" optional="true"/>
    	<attribute name="otp" mode="IN" type="String" optional="true" />
    	<attribute name="offerPage" type="String" mode="OUT" optional="true"/>
    	<attribute name="partyId" type="String" mode="OUT" optional="true" />
    </service>
    <!-- Version 2 API services end -->
    
    <!-- Version 3 API services start -->
    <service name="cs.createCustomerV3" engine="java" location="org.fio.customer.service.service.v3.CustomerServices" invoke="createCustomer" >
    	<description> Create Customer API</description>
    	<attribute name="requestContext" type="Map" mode="IN" optional="false"/>
    	<attribute name="custRef" mode="OUT" type="List" optional="true"/>
    	<attribute name="partyId" mode="OUT" type="String" optional="true"/>	
    </service>
    
    <service name="cs.updateCustomerV3" engine="java" location="org.fio.customer.service.service.v3.CustomerServices" invoke="updateCustomer" >
    	<description> Update Customer API</description>
    	<attribute name="requestContext" type="Map" mode="IN" optional="false"/>
    	<attribute name="custRef" mode="OUT" type="List" optional="true"/>
    	<attribute name="partyId" mode="OUT" type="String" optional="true"/>
    </service>
    
    <service name="cs.findCustomerV3" engine="java" location="org.fio.customer.service.service.v3.CustomerServices" invoke="findCustomer" >
    	<description> Find Customer API</description>
    	<attribute name="requestContext" type="Map" mode="IN" optional="false"/>
    	<attribute name="result" type="List" mode="OUT" optional="true"/>
    	
    	<attribute name="totalPage" type="String" mode="OUT" optional="true"/>
    	<attribute name="totalRecord" type="String" mode="OUT" optional="true"/>
    	<attribute name="currPage" type="String" mode="OUT" optional="true"/>
    </service>
    
    <service name="cs.getCustomerDetailsV3" engine="java" location="org.fio.customer.service.service.v3.CustomerServices" invoke="getCustomerDetails" >
    	<description> Update Customer API</description>
    	<attribute name="customerId" type="String" mode="IN" optional="false"/>
    	<attribute name="result" mode="OUT" type="Map" optional="true"/>
    	
    </service>
    
    <service name="cs.verifyCustomerV3" engine="java" location="org.fio.customer.service.service.v3.CustomerServices" invoke="verifyCustomer" >
    	<description> Update Customer API</description>
    	<attribute name="emailId" type="String" mode="IN" optional="false"/>
    	<attribute name="mode" type="String" mode="IN" optional="false"/>
    	<attribute name="hashCode" type="String" mode="INOUT" optional="true"/>
    	<attribute name="otp" mode="IN" type="String" optional="true" />
    	<attribute name="partyId" type="String" mode="INOUT" optional="true" />
    </service>
    
    <service name="cs.updateUserDataV3" engine="java" location="org.fio.customer.service.service.v3.CustomerServices" invoke="updateUserData" >
    	<description> Update User Data API</description>
    	<attribute name="requestContext" type="Map" mode="IN" optional="false"/>
    	<attribute name="result" mode="OUT" type="List" optional="true"/>
    </service>
    
    <service name="cs.updateUserPasswordV3" engine="java" location="org.fio.customer.service.service.v3.CustomerServices" invoke="updateUserPassword" >
    	<description>Update a UserLogin Password</description>
        <attribute name="userLoginId" type="String" mode="IN" optional="true"/>
        <attribute name="currentPassword" type="String" mode="IN" optional="true"/>
        <attribute name="newPassword" type="String" mode="IN" optional="true"/>
        <attribute name="newPasswordVerify" type="String" mode="IN" optional="true"/>
        <attribute name="passwordHint" type="String" mode="IN" optional="true"/>
        <attribute name="updatedUserLogin" type="org.ofbiz.entity.GenericValue" mode="OUT" optional="false"/>
    </service>
    <service name="cs.updateUserIdV3" engine="java" location="org.fio.customer.service.service.v3.CustomerServices" invoke="updateUserId" auth="true">
        <description>Update a UserLoginId by creating a new one and expiring the old one</description>
        <attribute name="userId" type="String" mode="IN" optional="false"/>
        <attribute name="newUserId" type="String" mode="IN" optional="false"/>
        <attribute name="currentPassword" type="String" mode="IN" optional="true"/>
        <attribute name="newUserLogin" type="org.ofbiz.entity.GenericValue" mode="OUT" optional="false"/>
    </service>
    
    <service name="cs.forgetUserPasswordV3" engine="java" location="org.fio.customer.service.service.v3.CustomerServices" invoke="forgetUserPassword" auth="true">
        <description>Update a UserLoginId by creating a new one and expiring the old one</description>
        <attribute name="userLoginId" type="String" mode="IN" optional="false"/>
        <attribute name="newPassword" type="String" mode="IN" optional="true"/>
        <attribute name="newPasswordVerify" type="String" mode="IN" optional="true"/>
        <attribute name="updatedUserLogin" type="org.ofbiz.entity.GenericValue" mode="OUT" optional="false"/>
    </service>
    
    <service name="cs.sendPasswordV3" engine="java" location="org.fio.customer.service.service.v3.CustomerServices" invoke="sendPassword" auth="true">
        <description>Update a UserLoginId by creating a new one and expiring the old one</description>
        <attribute name="requestContext" type="Map" mode="IN" optional="false"/>
        <attribute name="userId"  type="String" mode="OUT" optional="true"/>
        <attribute name="emailId"  type="String" mode="OUT" optional="true"/>
    </service>
    <service name="cs.createUser" engine="java" location="org.fio.customer.service.service.v3.CustomerServices" invoke="createUser" auth="true">
        <description>Update a UserLoginId by creating a new one and expiring the old one</description>
        <attribute name="userId" type="String" mode="INOUT" optional="false"/>
        <attribute name="partyId"  type="String" mode="IN" optional="true"/>
        <attribute name="userStatus"  type="String" mode="IN" optional="true"/>
        <attribute name="password"  type="String" mode="IN" optional="true"/>
        <attribute name="confirmPassword"  type="String" mode="IN" optional="true"/>
        <attribute name="passwordHint"  type="String" mode="IN" optional="true"/>
        <attribute name="isLdapUser"  type="String" mode="IN" optional="true"/>
        <attribute name="isTempPassword"  type="String" mode="OUT" optional="true"/>
        <attribute name="emailId"  type="String" mode="OUT" optional="true"/>
    </service>
    
    <service name="cs.sendEmailWithTemplate" engine="java" location="org.fio.customer.service.service.v3.CustomerServices" invoke="sendEmailWithTemplate" auth="true">
        <description>Update a UserLoginId by creating a new one and expiring the old one</description>
        <attribute name="requestContext" type="Map" mode="IN" optional="false"/>
    </service>
    
	
	<!-- Customer Measurement API [start] -->
	
	<service name="cs.getCustomerMeasurement" engine="java" 
		location="org.fio.customer.service.service.v3.MeasurementServices" invoke="getCustomerMeasurement" auth="true">
        <description>Get Customer Measurement</description>
        <attribute name="requestContext" type="Map" mode="IN" optional="false"/>
        <attribute name="responseContext" type="Map" mode="OUT" optional="false"/>
    </service>  
    
    <service name="cs.createCustomerMeasurement" engine="java" 
		location="org.fio.customer.service.service.v3.MeasurementServices" invoke="createCustomerMeasurement" auth="true">
        <description>Create Customer Measurement</description>
        <attribute name="requestContext" type="Map" mode="IN" optional="false"/>
        <attribute name="responseContext" type="Map" mode="OUT" optional="false"/>
    </service>  
    
    
    <!-- Customer Measurement API [end] -->
    
    <!-- Version 3 API services end -->
    <service name="customer.editCoupon" engine="java" location="org.fio.customer.service.service.coupon.CustomerServices" invoke="editCoupon">
    	<attribute name="couponData" mode="IN" type="Map" optional="true"/>
    </service>
    <service name="cs.createGravityCustomerV5" engine="java" location="org.fio.customer.service.service.v5.GravityCustomerServices" invoke="createGravityCustomer" >
    	<description> Create Customer API</description>
    	<attribute name="requestContext" type="Map" mode="IN" optional="false"/>
    	<attribute name="custRef" mode="OUT" type="List" optional="true"/>
    	<attribute name="partyId" mode="OUT" type="String" optional="true"/>	
    </service>
</services>