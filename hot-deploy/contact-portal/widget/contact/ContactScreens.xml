            </actions>
            <widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="top-content">
						<platform-specific><html><html-template location="component://contact-portal/webapp/contact-portal/contact/find/find_contact.ftl"/></html></platform-specific> 
