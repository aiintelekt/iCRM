<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>lead-service Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="noSyntaxError" engine="interface">
        <description>
            Dummy service to prevent empty files and syntax error - Remove when the 1st real service will be added here 
        </description>
    </service> 
    
    <service name="admin.testService" engine="java" use-transaction="true" auth="true" transaction-timeout="36000"
             location="org.groupfio.admin.service.services.SampleServiceImpl" invoke="testService">
       	<description> Test Service </description>
       	<attribute name="groupId" type="String" mode="IN" optional="true"/>
    </service>
    
    <service name="lead.convertLead" engine="java" location="org.groupfio.lead.service.services.LeadServices" invoke="convertLead">
		<description>Convert lead to Account/Customer</description>
		<attribute name="leadPartyId" type="String" mode="IN" optional="false"/>
		<attribute name="leadConvertType" type="String" mode="IN" optional="true"/>
		<attribute name="externalLoginKey" type="String" mode="INOUT" optional="true"/>
		<attribute name="partyId" type="String" mode="OUT" optional="false"/>
		<attribute name="convertedRoleTypeId" type="String" mode="OUT" optional="true"/>
	</service>
	
	<service name="lead.postConvertLead" engine="java" location="org.groupfio.lead.service.services.LeadServices" invoke="postConvertLead">
        <description>Post action after convert Lead</description>
        <attribute name="convertedRoleTypeId" type="String" mode="IN" optional="true"/>
        <attribute name="partyId" type="String" mode="INOUT" optional="false"/>
    </service>
    
    <service name="ls.createLeadV1" engine="java" location="org.groupfio.lead.service.services.v1.LeadServices" invoke="createLead" >
    	<description> Create Lead API</description>
    	<attribute name="requestContext" type="Map" mode="IN" optional="false"/>
    	<attribute name="custRef" mode="OUT" type="List" optional="true"/>
    	<attribute name="partyId" mode="OUT" type="String" optional="true"/>	
    </service>
    
    <service name="ls.updateLeadV1" engine="java" location="org.groupfio.lead.service.services.v1.LeadServices" invoke="updateLead" >
    	<description> Update Lead API</description>
    	<attribute name="requestContext" type="Map" mode="IN" optional="false"/>
    	<attribute name="custRef" mode="OUT" type="List" optional="true"/>
    	<attribute name="partyId" mode="OUT" type="String" optional="true"/>	
    </service>
	        
    <service name="ls.verifyLeadV1" engine="java" location="org.groupfio.lead.service.services.v1.LeadServices" invoke="verifyLead" >
    	<description> Update Customer API</description>
    	<attribute name="emailId" type="String" mode="IN" optional="false"/>
    	<attribute name="mode" type="String" mode="IN" optional="false"/>
    	<attribute name="hashCode" type="String" mode="INOUT" optional="true"/>
    	<attribute name="otp" mode="IN" type="String" optional="true" />
    	<attribute name="partyId" type="String" mode="INOUT" optional="true" />
    </service>

</services>