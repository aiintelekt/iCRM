<entitymodel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/entitymodel.xsd">
  <!-- ========================================================= -->
  <!-- ======================== Defaults ======================= -->
  <!-- ========================================================= -->
    <title>ITM Data Import Entities</title>
    <description>Defines intermediate entities for importing supplier data</description>
    <copyright>Copyright (c) Open Source Strategies, Inc.</copyright>
    <author>Si Chen (sichen@opensourcestrategies.com)</author>
    <version>1.0</version>

    <!-- ================================= -->
    <!-- org.opentaps.dataimport.customers -->  
    <!-- ================================= -->

    <!-- for precise definitions of the field types see the file framework/entity/fieldtype/fieldtypeXXX.xml for your database XXX -->

    <entity entity-name="DataImportItm" package-name="org.opentaps.dataimport.itm" title="DataImportItm">    
		<field name="batchId" type="id-ne"/>
		<field name="invoiceId" type="id" />
		<field name="invoiceSequenceNumber" type="id" />
		
		<field name="invoiceType" type="id" />
		<field name="invoiceExtRefNumber" type="id" />
		<field name="storeNumber" type="id" />
		<field name="invoiceDate" type="date-time" />
		<field name="totalSalesAmount" type="currency-amount" />
		<field name="invoiceCurrency" type="id" />
		<field name="totalTenderAmount_1" type="currency-amount" />
		<field name="totalTenderAmount_2" type="currency-amount" />
		<field name="totalTenderType_1" type="id" />
		<field name="totalTenderType_2" type="id" />
		<field name="totalTaxAmount" type="currency-amount" />
		<field name="billToPartyId" type="id" />
		<field name="billToPartyName" type="id" />
		<field name="billToPartyRefId" type="id" />
		<field name="skuNumber" type="id" />
		<field name="skuDescription" type="id-long-ne" />
		<field name="unitRetail" type="currency-amount" />
		<field name="unitCost" type="currency-amount" />
		<field name="quantitySold" type="currency-amount" />
		<field name="itemNetSales" type="currency-amount" />
		<field name="extendedDiscount" type="currency-amount" />
		<field name="totalLineTaxAmount" type="currency-amount" />
		<field name="discountAmount" type="currency-amount" />
		<field name="isReturn" type="id" />
		<field name="numberOfReturns" type="currency-amount" />
		<field name="totalReturnedAmount" type="currency-amount" />
		<field name="totalAdjustmentNonTaxAndDiscount" type="currency-amount" />
		<field name="isGuestPurchase" type="id" />
		<field name="primaryBrand" type="id" />
		<field name="returnedDate" type="date-time" />
		<field name="productCategoryId1" type="id" />
		<field name="productCategoryName1" type="id-ne" />
		<field name="productCategoryId2" type="id" />
		<field name="productCategoryName2" type="id-ne" />
		<field name="productCategoryId3" type="id" />
		<field name="productCategoryName3" type="id-ne" />
		<field name="shipmentAddress1" type="id-long-ne" />
		<field name="shipmentAddress2" type="id-long-ne" />
		<field name="shipmentCity" type="id-long-ne" />
		<field name="shipmentStateProvince" type="id-ne" />
		<field name="shipmentPostalCode" type="id" />
		<field name="shipmentCountry" type="id" />
		<field name="shipmentPhone" type="id" />
		<field name="billAddress1" type="id-long-ne" />
		<field name="billAddress2" type="id-long-ne" />
		<field name="billCity" type="id-long-ne" />
		<field name="billPostalCode" type="id" />
		<field name="billCountry" type="id" />
		<field name="billStateProvince" type="id-ne" />
		<field name="billingPhone" type="id" />
		<field name="billingEmail" type="description" />
		
		<field name="importStatusId" type="id-ne"><description>Status of record import.  Null is the same as DATAIMP_NOT_PROC.</description></field>
        <field name="importError" type="very-long"><description>Error report for failed imports.</description></field>
        <field name="processedTimestamp" type="date-time">
            <description>Special field for system to record when entry was successfully imported.  
                Do not use for any other purpose.</description>
        </field>
        <field name="source" type="long-varchar"></field>
        <field name="errorCodes" type="very-long"/>
        <field name="approvedByUserLoginId" type="id-vlong"></field>
        <field name="rejectedByUserLoginId" type="id-vlong"></field>
        <field name="uploadedByUserLoginId" type="id-vlong"></field>
		
		<prim-key field="batchId"/>
		<prim-key field="invoiceId"/>
		<prim-key field="invoiceSequenceNumber"/>
	</entity>
    
</entitymodel>
