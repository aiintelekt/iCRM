<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/simple-methods-v2.xsd">

    <simple-method method-name="createScreenConfigService" short-description="Composite service to create ComponentLayoutScreen and ScreenSpecification.">
        <log level="info" message="=== Create a new entry in 'ComponentLayoutScreen' and 'ScreenSpecification' ==="/>
        <set field="serviceCtx.clsId" from-field="parameters.clsId"/>
        <set field="serviceCtx.mountPoint" from-field="parameters.mountPoint"/>
        <set field="serviceCtx.layout" from-field="parameters.layout"/>
        <set field="serviceCtx.screen" from-field="parameters.screen"/>
        <set field="serviceCtx.screenService" from-field="parameters.screenService"/>
        <set field="serviceCtx.requestUri" from-field="parameters.requestUri"/>
        <set field="serviceCtx.userLogin" from-field="parameters.userLogin"/>
        <call-service service-name="createComponentLayoutScreen" in-map-name="serviceCtx">
            <result-to-field result-name="clsId" field="clsId"/>
            <result-to-field result-name="clsId" field="parameters.clsId"/>
        </call-service>
        <clear-field field="serviceCtx"/>

        <iterate entry="data" list="parameters.dataList">
            <set field="serviceCtx.clsId" from-field="parameters.clsId"/>
            <set field="serviceCtx.fieldName" from-field="data.fieldName"/>
            <set field="serviceCtx.sequenceNum" from-field="data.sequenceNum"/>
            <set field="serviceCtx.fieldService" from-field="data.fieldService"/>
            <set field="serviceCtx.dataType" from-field="data.dataType"/>
            <set field="serviceCtx.isMandatory" from-field="data.isMandatory"/>
            <set field="serviceCtx.isCreate" from-field="data.isCreate"/>
            <set field="serviceCtx.isView" from-field="data.isView"/>
            <set field="serviceCtx.isEdit" from-field="data.isEdit"/>
            <set field="serviceCtx.isDisabled" from-field="data.isDisabled"/>
            <set field="serviceCtx.userLogin" from-field="data.userLogin"/>
            <call-service service-name="createScreenSpecification" in-map-name="serviceCtx">
                <result-to-field result-name="clsId" field="parameters.clsId"/>
            </call-service>
        </iterate>
    </simple-method>

    <simple-method method-name="createComponentLayoutScreen" short-description="Create Component Layout Screen">
        <make-value value-field="newEntity" entity-name="ComponentLayoutScreen"/>
        <if-empty field="parameters.clsId">
            <sequenced-id sequence-name="ComponentLayoutScreen" field="newEntity.clsId"/>
            <else>
                <check-id field="parameters.clsId"/>
                <check-errors/>
                <set field="newEntity.clsId" from-field="parameters.clsId"/>
            </else>
        </if-empty>
        <field-to-result field="newEntity.clsId" result-name="clsId"/>
        <set-nonpk-fields map="parameters" value-field="newEntity"/>

        <set from-field="userLogin.userLoginId" field="newEntity.lastModifiedByUserLogin"/>
        <set from-field="userLogin.userLoginId" field="newEntity.createdByUserLogin"/>
        <create-value value-field="newEntity"/>
    </simple-method>

    <simple-method method-name="createScreenSpecification" short-description="Create Screen Specification">
        <make-value value-field="newEntity" entity-name="ScreenSpecification"/>
        <if-empty field="parameters.clsId">
            <add-error>
                <fail-property resource="AdminPortalUiLabels" property="CLSIdMandatory"/>
            </add-error>
            <check-errors/>
        </if-empty>
        <set from-field="parameters.clsId" field="newEntity.clsId"/>
        <sequenced-id sequence-name="ScreenSpecification" field="newEntity.fieldId"/>
        <!--<sequenced-id sequence-name="ScreenSpecification" field="newEntity.sequenceNum"/>-->
        <field-to-result field="newEntity.clsId" result-name="clsId"/>
        <set-nonpk-fields map="parameters" value-field="newEntity"/>
        <create-value value-field="newEntity"/>
    </simple-method>

</simple-methods>