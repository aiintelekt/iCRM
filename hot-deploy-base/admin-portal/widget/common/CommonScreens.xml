					<decorator-section name="footer-center-content">
						<platform-specific>
							<html>
								<html-template location="component://admin-portal/webapp/admin-portal/includes/footerCenter.ftl" />
							</html>
						</platform-specific>
					</decorator-section>
					
					<decorator-section name="theme-footer-content">
						<platform-specific>
							<html>
