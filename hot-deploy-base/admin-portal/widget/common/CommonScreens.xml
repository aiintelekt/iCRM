<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <actions>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="AdminPortalUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="AbAgGridSupportUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="common-portalUiLabels" map-name="uiLabelMap" global="true"/>
                <set field="layoutSettings.appName" from-field="uiLabelMap.AppName" global="true"/>
                <set field="layoutSettings.companyName" from-field="uiLabelMap.admin-portalCompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.CompanySubtitle" global="true"/>

				<script location="component://admin-portal/webapp/admin-portal/WEB-INF/actions/globalScrollMsg/getGlobalMessageDetails.groovy" />
                <set field="activeApp" value="admin-portal" global="true"/>
                <set field="applicationTitle" value="${uiLabelMap.Application}" global="true"/>
            </actions>
            <widgets>
                <include-screen name="CommonDecorator"/>
            </widgets>
        </section>
    </screen>
    
    <screen name="LoadLayoutFile">
		<section>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://admin-portal/webapp/admin-portal/global/MainLayout.ftl" />
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	
	<screen name="MainLayout">
		<section>
			<actions>
				<set field="pageDescriptionLabel" from-field="pageDescriptionLabel" default-value=""/>
