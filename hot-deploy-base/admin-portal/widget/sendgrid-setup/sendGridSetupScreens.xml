<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

	<screen name="sendGridSetup">
		<section>
			<actions>
				<set field="titleProperty" value="SendGrid Setup" global="true"/>
				<set field="sectionName" value="admin-portal" global="true"/>
				<property-map resource="AdminPortalUiLabels" map-name="uiLabelMap" global="true"/>
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="top-content">
						<platform-specific><html><html-template location="component://admin-portal/webapp/admin-portal/sendgrid-setup/sendgridsetup.ftl"/></html></platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="emailTracking">
		<section>
			<actions>
				<set field="titleProperty" value="Find Email Tracking" global="true"/>
				<set field="sectionName" value="admin-portal" global="true"/>
				<property-map resource="AdminPortalUiLabels" map-name="uiLabelMap" global="true"/>
				<script location="component://admin-portal/webapp/admin-portal/WEB-INF/actions/email-track/emailTracking.groovy"/>
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="bottom-content">
						<platform-specific><html><html-template location="component://admin-portal/webapp/admin-portal/sendgrid-setup/findEmailTracking.ftl"/></html></platform-specific>
						<platform-specific><html><html-template location="component://admin-portal/webapp/admin-portal/sendgrid-setup/viewEmailTracking.ftl"/></html></platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
</screens>