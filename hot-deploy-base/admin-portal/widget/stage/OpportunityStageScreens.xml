<?xml version="1.0" encoding="UTF-8"?>
       
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	
    <screen name="FindOppoStage">
        <section>
            <actions>
                <set field="titleProperty" value="FindOppoStage" global="true"/>
                <set field="sectionName" value="admin-portal" global="true"/>
                <property-map resource="AdminPortalUiLabels" map-name="uiLabelMap" global="true"/>
                <script location="component://admin-portal/webapp/admin-portal/WEB-INF/actions/stage/FindOppoStage.groovy"/>
            </actions>
            <widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="top-content">
						<platform-specific><html><html-template location="component://admin-portal/webapp/admin-portal/stage/find/find_stage.ftl"/></html></platform-specific> 
	              	</decorator-section>
					<decorator-section name="bottom-content">
						<include-screen name="ListOppoStage"/>
	              	</decorator-section>
	          	</decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="ListOppoStage">
        <section>
        	<actions>
				
            </actions>
        	<widgets>
                <platform-specific><html><html-template location="component://admin-portal/webapp/admin-portal/stage/find/list_stage.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>
    
    <screen name="ViewOppoStage">
        <section>
            <actions>
                <set field="titleProperty" value="ViewOppoStage" global="true"/>
                <set field="sectionName" value="admin-portal" global="true"/>
                <set field="isView" value="Y" global="true"/>
                <property-map resource="AdminPortalUiLabels" map-name="uiLabelMap" global="true"/>
                <script location="component://admin-portal/webapp/admin-portal/WEB-INF/actions/stage/ViewOppoStage.groovy"/>
            </actions>
             <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="top-content">
                        <platform-specific>
                                <html>
                                    <html-template location="component://admin-portal/webapp/admin-portal/stage/view/view_stage.ftl"/>
                                </html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
	<screen name="CreateOppoStage">
		<section>
			<actions>
			  <set field="titleProperty" value="CreateOppoStage" global="true"/>
			  <set field="sectionName" value="admin-portal" global="true"/>
			  <script location="component://admin-portal/webapp/admin-portal/WEB-INF/actions/stage/CreateOppoStage.groovy"/>
			</actions>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="top-content">
						<platform-specific>
							<html>
								<html-template location="component://admin-portal/webapp/admin-portal/stage/create/create_stage.ftl"/>
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="UpdateOppoStage">
		<section>
			<actions>
			  <set field="titleProperty" value="UpdateOpportunity" global="true"/>
			  <set field="sectionName" value="admin-portal" global="true"/>
			  <script location="component://admin-portal/webapp/admin-portal/WEB-INF/actions/stage/ViewOppoStage.groovy"/>
			</actions>
			<widgets>
			<section>
			<condition>
				<if-compare field="haveDataPermission" operator="equals" value="Y" type="String"/>
			</condition>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="top-content">
						<platform-specific>
							<html>
								<html-template location="component://admin-portal/webapp/admin-portal/stage/update/update_stage.ftl"/>
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
				</widgets>
	        	<fail-widgets>
					<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
						<decorator-section name="top-content">
							<label style="h3">${uiLabelMap.permissionDenied}</label>
						</decorator-section>
					</decorator-screen>
				</fail-widgets>
	        </section>
			</widgets>
		</section>
	</screen>
	
	<screen name="ViewOppoStageDetail">
		<section>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://admin-portal/webapp/admin-portal/stage/view/stage_detail.ftl"/>
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	
	<screen name="AdministrationInfo">
		<section>
			<actions>
                
            </actions>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://admin-portal/webapp/admin-portal/stage/administration_info.ftl"/>
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	
</screens>
