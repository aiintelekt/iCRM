<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	<screen name="findComponent">
		<section>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="top-content">
						<platform-specific>
							<html>
								<html-template location="component://admin-portal/webapp/admin-portal/component-management/find_component.ftl"/>
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="findShortcutTab">
		<section>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="top-content">
						<platform-specific>
							<html>
								<html-template location="component://admin-portal/webapp/admin-portal/component-management/find_shortcut_tab.ftl"/>
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="updateComponent">
		<section>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="top-content">
						<platform-specific>
							<html>
								<html-template location="component://admin-portal/webapp/admin-portal/component-management/update_component.ftl"/>
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="updateShortcutTab">
		<section>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="top-content">
						<platform-specific>
							<html>
								<html-template location="component://admin-portal/webapp/admin-portal/component-management/update_shortcut_tab.ftl"/>
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen> 
	<screen name="updateSubMenu">
		<section>
			<widgets>
				<decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="top-content">
						<platform-specific>
							<html>
								<html-template location="component://admin-portal/webapp/admin-portal/component-management/update_sub_menu.ftl"/>
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="findNavTab">
		<section>
			<actions>
				<set field="titleProperty" value="FindNavTab" global="true" />
				<set field="sectionName" value="admin-portal" global="true" />
				<property-map resource="AdminPortalUiLabels" map-name="uiLabelMap"
					global="true" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="top-content">
						<platform-specific>
							<html>
								<html-template
									location="component://admin-portal/webapp/admin-portal/component-management/find_nav_tabs.ftl" />
							</html>
						</platform-specific>
					</decorator-section>
					<decorator-section name="bottom-content">
						<include-screen name="ListNavTabs" />
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="ListNavTabs">
		<section>
			<actions>
			</actions>
			<widgets>
				<platform-specific>
					<html>
						<html-template
							location="component://admin-portal/webapp/admin-portal/component-management/list_nav_tabs.ftl" />
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	<screen name="EnableDisableComponents">
        <section>
            <actions>
                <set field="titleProperty" value="enableDisableComponents" global="true"/>
                <set field="sectionName" value="admin-portal" global="true"/>
                <property-map resource="AdminPortalUiLabels" map-name="uiLabelMap" global="true"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="top-content">
                        <platform-specific>
                            <html>
                                <html-template location="component://admin-portal/webapp/admin-portal/component-management/enable_disable_components.ftl"/>
                            </html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>