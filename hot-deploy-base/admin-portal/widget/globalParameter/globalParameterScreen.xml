                <script location="component://admin-portal/webapp/admin-portal/WEB-INF/actions/globalParameter/viewGlobalParameter.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="top-content">
                        <platform-specific>
                            <html>
                                <html-template location="component://admin-portal/webapp/admin-portal/globalParameter/globalParameter.ftl"/>
                            </html>
                        </platform-specific>
                    </decorator-section>
