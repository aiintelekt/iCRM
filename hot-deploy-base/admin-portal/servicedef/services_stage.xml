<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>opportunity-stage-service Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="noSyntaxError" engine="interface">
        <description>
            Dummy service to prevent empty files and syntax error - Remove when the 1st real service will be added here 
        </description>
    </service> 
    
    <service name="admin.createOppoStage" engine="java" use-transaction="true" auth="true" transaction-timeout="36000"
    	location="org.fio.admin.portal.service.OpportunityStageServices" invoke="createOppoStage">
        <description>Create Opportunity Stage</description>
        <implements service="admin.oppoStageInterface"/>
        <attribute name="opportunityStageId" type="String" mode="OUT" optional="false"/>
    </service>
    
    <service name="admin.updateOppoStage" engine="java" use-transaction="true" auth="true" transaction-timeout="36000"
    	location="org.fio.admin.portal.service.OpportunityStageServices" invoke="updateOppoStage">
        <description>Update Opportunity Stage</description>
        <implements service="admin.oppoStageInterface"/>
        <attribute name="opportunityStageId" type="String" mode="INOUT" optional="false"/>
    </service>
	    
    <service name="admin.oppoStageInterface" engine="interface" location="" invoke="">
        <attribute name="description" type="String" mode="IN" optional="false"/>
        <attribute name="defaultProbability" type="BigDecimal" mode="IN" optional="false"/>
        <attribute name="sequenceNum" type="Long" mode="IN" optional="false"/>
        <attribute name="opportunityStatusId" type="String" mode="IN" optional="false"/>
        <attribute name="enable" type="String" mode="IN" optional="false"/>
    </service>
    
</services>