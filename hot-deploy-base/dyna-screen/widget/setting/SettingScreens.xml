<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">	
     
    <screen name="SettingDynaScreen">
        <section>
            <actions>
                <set field="titleProperty" value="settingDynaScreen" global="true"/>
                <set field="sectionName" value="dyna-screen" global="true"/>
                <property-map resource="dyna-screenUiLabels" map-name="uiLabelMap" global="true"/>
                <script location="component://dyna-screen/webapp/dyna-screen/WEB-INF/actions/setting/SettingDynaScreen.groovy"/>
            </actions>
             <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="top-content">
                        <platform-specific>
                                <html>
                                    <html-template location="component://dyna-screen/webapp/dyna-screen/setting/setting_dyna_screen.ftl"/>
                                </html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
		
</screens>