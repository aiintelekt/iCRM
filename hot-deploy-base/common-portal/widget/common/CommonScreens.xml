<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <actions>
                 <property-map resource="common-portalUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>

                <set field="layoutSettings.companyName" from-field="uiLabelMap.CompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.CompanySubtitle" global="true"/>

                <set field="activeApp" value="common-portal" global="true"/>
                <set field="applicationTitle" value="${uiLabelMap.Application}" global="true"/>
            </actions>
            <widgets>
                <include-screen name="CommonDecorator" location="component://admin-portal/widget/common/CommonScreens.xml"/>
            </widgets>
        </section>
    </screen>
    
    <screen name="AddCommonFeatures">
		<section>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://common-portal/webapp/common-portal/contact/modal_window.ftl"/>
						<html-template location="component://common-portal/webapp/common-portal/common/write_email.ftl"/>
						<html-template location="component://common-portal/webapp/common-portal/common/modal_window.ftl"/>
						<html-template location="component://common-portal/webapp/common-portal/common/create_log_call.ftl"/>
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	
	<screen name="AddDataSource">
		<section>
			<actions>
                <script location="component://common-portal/webapp/common-portal/WEB-INF/actions/common/AddDataSource.groovy"/>
            </actions>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://common-portal/webapp/common-portal/common/add_data_source.ftl"/>
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	
	<screen name="AddMarketingCampaign">
		<section>
			<actions>
                <script location="component://common-portal/webapp/common-portal/WEB-INF/actions/common/AddMarketingCampaign.groovy"/>
            </actions>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://common-portal/webapp/common-portal/common/add_marketing_campaign.ftl"/>
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>
	
	<screen name="noteDataDetails">
	<actions>
               <set field="titleProperty" value="Services" global="true"/>
               <set field="sectionName" value="sr-portal" global="true"/>

           </actions>
		<section>
			<widgets>
			 <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
             	<decorator-section name="top-content">
					<platform-specific>
							<html>
							<html-template location="component://common-portal/webapp/common-portal/note/note_Data_Details.ftl"/>
							</html>
					</platform-specific>
				</decorator-section>
               </decorator-screen>
			</widgets>
		</section>
	</screen>
	
	<screen name="ActivityDetails">
        <section>
            <widgets>
                <platform-specific>
	                 <html>
	                     <html-template location="component://common-portal/webapp/common-portal/activity/activity_details.ftl" />
	                 </html>
                </platform-specific>
            </widgets>
        </section>
    </screen>
     <screen name="ViewInvoice">
        <section>
            <actions>
              <set field="titleProperty" value="View Invoice " global="true"/>
              <set field="sectionName" value="accounting-portal" global="true"/>
              <script location="component://common-portal/webapp/common-portal/WEB-INF/actions/invoice/ViewInvoiceDetails.groovy" />
               <script location="component://common-portal/webapp/common-portal/WEB-INF/actions/invoice/getInvoiceItemType.groovy" />
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="top-content">
						<platform-specific>
							<html>
								<html-template location="component:///common-portal/webapp/common-portal/invoice/viewInvoice.ftl"/>
							</html>
						</platform-specific>
					</decorator-section>
				</decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="AdministrationDetails">
        <section>
            <widgets>
                <platform-specific>
	                 <html>
	                    <html-template location="component://common-portal/webapp/common-portal/activity/activity_administration_details.ftl" />
	                </html>
                </platform-specific>
            </widgets>
        </section>
    </screen>
    
</screens>