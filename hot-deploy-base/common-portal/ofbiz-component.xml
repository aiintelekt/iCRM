    <!-- web applications; will be mounted when using the embedded container -->
    <webapp name="common-portal"
        title="common-portal"
        server="default-server"
        location="webapp/common-portal"
        mount-point="/common-portal"/>
   	<webapp name="common-portal-resource"
        title="common-portal Resources including css, images, js"
        server="default-server"
        location="webapp/common-portal-resource"
        mount-point="/common-portal-resource"
        app-bar-display="false"/>
          
</ofbiz-component>
