<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>Opentaps Content Services</description>
    <vendor>Open Source Strategies, Inc.</vendor>
    
    <service name="common.createNoteData" engine="java" use-transaction="true" auth="true" transaction-timeout="36000"
    	location="org.groupfio.common.portal.service.NoteServices" invoke="createNoteData">
    	<description>Create Note Data</description>
        <attribute name="requestContext" type="Map" mode="IN" optional="true"/>
    </service>
    <service name="common.updatePartyNotePriority" engine="java" use-transaction="true" auth="true" transaction-timeout="36000"
    	location="org.groupfio.common.portal.service.NoteServices" invoke="updatePartyNotePriority">
    	<description>Update Party Note Priority Data</description>
    	<attribute name="noteId" type="String" mode="IN" optional="true"/>
    	<attribute name="partyId" type="String" mode="IN" optional="true"/>
    	<attribute name="domainEntityType" type="String" mode="IN" optional="true"/>
    </service>
</services>
