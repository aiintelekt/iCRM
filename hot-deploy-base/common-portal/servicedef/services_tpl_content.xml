<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>Template Content Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="noSyntaxError" engine="interface">
        <description>
            Dummy service to prevent empty files and syntax error - Remove when the 1st real service will be added here 
        </description>
    </service> 
    
    <service name="tplcontent.createTemplateContent" engine="java" use-transaction="true" auth="true" transaction-timeout="36000"
    	location="org.groupfio.common.portal.service.TemplateContentServices" invoke="createTemplateContent">
        <description>Create Template Content</description>
        <attribute name="contentContext" type="Map" mode="IN" optional="true"/>
        <attribute name="templateContentId" type="String" mode="OUT" optional="true"/>
    </service>
    
    <service name="tplcontent.updateTemplateContent" engine="java" use-transaction="true" auth="true" transaction-timeout="36000"
    	location="org.groupfio.common.portal.service.TemplateContentServices" invoke="updateTemplateContent">
        <description>Update Template Content</description>
        <attribute name="contentContext" type="Map" mode="IN" optional="true"/>
        <attribute name="templateContentId" type="String" mode="OUT" optional="false"/>
    </service>
    
    <service name="tplcontent.findTemplateContent" engine="java" use-transaction="true" auth="true" transaction-timeout="36000"
             location="org.groupfio.common.portal.service.TemplateContentServices" invoke="findTemplateContent">
       	<description> Find Template Content </description>
       	
       	<attribute name="domainEntityType" type="String" mode="IN" optional="true"/>
       	<attribute name="domainEntityId" type="String" mode="IN" optional="true"/>
       	
       	<attribute name="requestContext" type="Map" mode="IN" optional="true"/>
		       	
       	<attribute name="dataList" type="List" mode="OUT" optional="true"/>
       	<attribute name="errorMsg" type="String" mode="OUT" optional="true"/>
	   	<attribute name="viewIndex" type="Integer" mode="OUT" optional="true"/>
	   	<attribute name="highIndex" type="Integer" mode="OUT" optional="true"/>
	   	<attribute name="lowIndex" type="Integer" mode="OUT" optional="true"/>
	   	<attribute name="viewSize" type="Integer" mode="OUT" optional="true"/>
	   	<attribute name="resultListSize" type="Integer" mode="OUT" optional="true"/>
    </service>
    
</services>