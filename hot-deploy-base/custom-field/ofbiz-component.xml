<?xml version="1.0" encoding="UTF-8"?>

<ofbiz-component name="custom-field"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/ofbiz-component.xsd">
    <!-- always required -->
    <resource-loader name="main" type="component"/>
    <classpath type="jar" location="lib/*"/>
    <classpath type="jar" location="build/lib/*"/>
    <classpath type="dir" location="config"/>

    <!--Classpath resources-->
    <classpath type="dir" location="config"/>

	<entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel.xml"/>
	<entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel-view.xml"/>
	<entity-resource type="model" reader-name="main" loader="main" location="entitydef/dynamic-entitymodel.xml"/>
	<entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel-extend.xml"/>
		
    <entity-resource type="data" reader-name="seed" loader="main" location="data/CFSeedData.xml"/>
	<entity-resource type="data" reader-name="system_seed" loader="main" location="data/custom-fieldDynaScreenPretailAndEnumSeedData.xml"/>
	<entity-resource type="data" reader-name="system_seed" loader="main" location="data/custom-fieldSegmentAndCustomSeedData.xml"/>

    <!-- services -->
    <service-resource type="model" loader="main" location="servicedef/services.xml"/>
    <service-resource type="eca" loader="main" location="servicedef/secas.xml"/>
    
    <webapp name="cf-resource"
        title="Custom Field Resources including css, images, js"
        server="default-server"
        location="webapp/cf-resource"
        mount-point="/cf-resource"
        app-bar-display="false"/>    
    <webapp name="custom-field"
        title="custom-field"
        server="default-server"
        location="webapp/custom-field"
        mount-point="/custom-field"
        app-bar-display="true"/>
            
</ofbiz-component>
